<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="startTemplate" template="/WEB-INF/template/template.jsp">
        <put-attribute name="header" value="/WEB-INF/views/user.jsp" />
        <put-attribute name="content" value="/WEB-INF/views/login.jsp"/>
    </definition>

    <definition name="user" extends="startTemplate">
        <put-attribute name="content" value="/WEB-INF/views/user.jsp"/>
    </definition>

    <definition name="measureform" extends="startTemplate">
        <put-attribute name="content" value="/WEB-INF/views/measureform.jsp"/>
    </definition>

</tiles-definitions>